import React, { useEffect, useState } from 'react';
import { NavigationContainer } from '@react-navigation/native';
import { createBottomTabNavigator } from '@react-navigation/bottom-tabs';
import { View, Text, ActivityIndicator, StyleSheet } from 'react-native';
import { Compass, Target, BarChart3, Users, User } from 'lucide-react-native';

// Import Screens
import DailyScreen from './features/daily/DailyScreen';
import GoalSettingScreen from './features/onboarding/GoalSettingScreen';
import VisualizationScreen from './features/progress/ProgressScreen';
import SocialScreen from './features/social/SocialScreen';
import ProfileEnhanced from './features/profile/ProfileEnhanced';
import LoginScreen from './features/auth/LoginScreen';

// Use Supabase store
import useStore from './state/rootStoreSupabase';

const Tab = createBottomTabNavigator();

const AppSupabase: React.FC = () => {
  const { isAuthenticated, checkAuth, user } = useStore();
  const [isLoading, setIsLoading] = useState(true);

  useEffect(() => {
    const initAuth = async () => {
      await checkAuth();
      setIsLoading(false);
    };
    initAuth();
  }, [checkAuth]);

  if (isLoading) {
    return (
      <View style={styles.loadingContainer}>
        <ActivityIndicator size="large" color="#FFD700" />
        <Text style={styles.loadingText}>Loading Best...</Text>
      </View>
    );
  }

  if (!isAuthenticated) {
    return <LoginScreen />;
  }

  return (
    <NavigationContainer>
      <Tab.Navigator
        screenOptions={{
          tabBarStyle: {
            backgroundColor: '#000000',
            borderTopColor: 'rgba(255, 215, 0, 0.2)',
            borderTopWidth: 1,
            height: 60,
            paddingBottom: 8,
            paddingTop: 8,
          },
          tabBarActiveTintColor: '#FFD700',
          tabBarInactiveTintColor: 'rgba(255, 255, 255, 0.4)',
          headerStyle: {
            backgroundColor: '#000000',
            elevation: 0,
            shadowOpacity: 0,
            borderBottomWidth: 1,
            borderBottomColor: 'rgba(255, 215, 0, 0.1)',
          },
          headerTintColor: '#FFD700',
          headerTitleStyle: {
            fontWeight: '700',
            fontSize: 18,
            letterSpacing: 0.5,
          },
          tabBarLabelStyle: {
            fontSize: 10,
            fontWeight: '600',
            letterSpacing: 0.3,
          },
        }}
      >
        <Tab.Screen
          name="Daily"
          component={DailyScreen}
          options={{
            title: 'Today',
            headerTitle: `Welcome back, ${user?.name || 'Champion'}!`,
            tabBarIcon: ({ color, size }) => (
              <Compass size={size - 2} color={color} strokeWidth={2.5} />
            ),
          }}
        />
        <Tab.Screen
          name="Goals"
          component={GoalSettingScreen}
          options={{
            title: 'Goals',
            headerTitle: 'Your Goals',
            tabBarIcon: ({ color, size }) => (
              <Target size={size - 2} color={color} strokeWidth={2.5} />
            ),
          }}
        />
        <Tab.Screen
          name="Progress"
          component={VisualizationScreen}
          options={{
            title: 'Progress',
            headerTitle: 'Your Journey',
            tabBarIcon: ({ color, size }) => (
              <BarChart3 size={size - 2} color={color} strokeWidth={2.5} />
            ),
          }}
        />
        <Tab.Screen
          name="Social"
          component={SocialScreen}
          options={{
            title: 'Circle',
            headerTitle: 'Your Circle',
            tabBarIcon: ({ color, size }) => (
              <Users size={size - 2} color={color} strokeWidth={2.5} />
            ),
          }}
        />
        <Tab.Screen
          name="Profile"
          component={ProfileEnhanced}
          options={{
            title: 'Profile',
            headerTitle: 'Your Profile',
            tabBarIcon: ({ color, size }) => (
              <User size={size - 2} color={color} strokeWidth={2.5} />
            ),
          }}
        />
      </Tab.Navigator>
    </NavigationContainer>
  );
};

const styles = StyleSheet.create({
  loadingContainer: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
    backgroundColor: '#000000',
  },
  loadingText: {
    marginTop: 16,
    color: '#FFD700',
    fontSize: 16,
    fontWeight: '600',
    letterSpacing: 0.5,
  },
});

export default AppSupabase;